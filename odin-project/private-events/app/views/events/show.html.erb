<h3><%= @event.name %></h3>

<div id="events-details">
  <p><b>Location: </b><%= @event.location %></p>
  <p><b>Host: </b><%= @event.creator.name %></p>
  <p><b>Date: </b><%= @event.date %></p>
  <p><b>Description: </b><%= @event.description %></p>
  <p><b>List of attendees:</b></p>

  <% if @event.attendees.any? %>
    <% @event.attendees.each do |attendee| %>
      <ul>
        <li> <%= attendee.name %> </li>
      </ul>
      <%= render 'shared/attend' %>
    <% end %>
  <% else %>
    <% if @event.date.to_date < Date.today %>
      <p>No one attended this event.</p>
    <% else %>
      <p>There is no one attending this event.</p>
      <%= render 'shared/attend' %>
    <% end %>
  <% end %>
</div>
