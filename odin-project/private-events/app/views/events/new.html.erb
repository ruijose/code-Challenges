<h1>Create a new event</h1>

<%= form_for(@event) do |f| %>

  <%= f.label :date %>
  <%= f.text_field :date, class: 'form-control' %>

  <%= f.label :name %>
  <%= f.email_field :name, class: 'form-control' %>

  <%= f.label :location %>
  <%= f.email_field :location, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.email_field :description, class: 'form-control' %>

  <%= f.submit "Create event", class: "btn btn-primary" %>
<% end %>
