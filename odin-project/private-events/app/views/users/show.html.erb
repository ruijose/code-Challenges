<h1><center><%= @user.name %> </center></h1>
<h1><center><%= @user.email %> </center></h1>

<% if @user.events.any? %>
    <% @user.events.each do |event| %>
      <ul>
        <li><%= link_to event.name, event_path(event) %></li>
      </ul>
    <% end %>   
<% else %>
  <h1><center><%= link_to "create new event", new_event_path %></center></h1>
<% end %>
