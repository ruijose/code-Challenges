<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <p><%= f.email_field :email, class: "form-control" %></p>

      <%= f.submit "Create my account", class: "btn btn-primary center-block" %>
    <% end %>
  </div>
</div>
