<h1>Login App</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name %>
      <p><%= f.text_field :name, class: 'form-control' %></p>

      <%= f.submit "Log in", class: "btn btn-primary center-block" %>
    <% end %>
  </div>
</div>
