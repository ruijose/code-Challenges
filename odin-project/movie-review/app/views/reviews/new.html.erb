<h3><center>Submit a new review</center></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for ([@movie,  @review]), :html => { :multipart => true } do |f| %>

      <%= f.label :rating %>
      <%= f.text_field :rating, class: 'form-control' %>

      <%= f.label :comment %>
      <p><%= f.text_field :comment, class: 'form-control' %></p>
      
      <p><%= f.submit "Submit review", class: "btn btn-primary center-block"  %></p>
    <% end %>
  </div>
</div>
